<% layout('layouts/main.layout') %>

<% block('subTitle', 'Service') %>

<section class="services-section">
  <div class="container text-center">
    <h1 class="section-title animate__animated" data-animation="animate__fadeIn">Our Services</h1>
    <p class="section-subtitle animate__animated" data-animation="animate__fadeIn animate__delay-1s">We offer a variety of services, starting with SEB.</p>

    <div class="row justify-content-center mt-5">
      <div class="col-lg-6 animate__animated" data-animation="animate__fadeInUp">
        <a href="<%= route('service/seb') %>" class="text-decoration-none">
          <div class="service-card">
            <div class="service-card-header bg-primary">
              <span class="popular-badge">Most Popular</span>
              <div class="d-flex align-items-center justify-content-center">
                <img src="<%= route('images/seb.png') %>" alt="Safe Exam Browser" height="50" width="50" class="me-3" loading="lazy">
                <span class="h4 mb-0">Safe Exam Browser</span>
              </div>
            </div>
            <div class="service-card-body">
              <div class="service-feature">
                <span class="feature-name">Bypass Safe Exam Browser restrictions</span>
                <span class="feature-tag">Seamless</span>
              </div>
              <div class="service-feature">
                <span class="feature-name">Switch between applications freely</span>
                <span class="feature-tag">Supported</span>
              </div>
              <div class="service-feature">
                <span class="feature-name">Quick and reliable results</span>
                <span class="feature-tag">Instant</span>
              </div>
            </div>
          </div>
        </a>
      </div>

      <div class="coming-soon mt-5 animate__animated" data-animation="animate__fadeIn animate__delay-2s">
        <h3 class="h4 text-muted mb-4 text-center">More Services Coming Soon</h3>
        <div class="row justify-content-center">
          <div class="col-md-4 mb-4">
            <div class="service-card coming-soon-card">
              <div class="service-card-header bg-secondary">
                Kahoot
              </div>
              <div class="service-card-body">
                <p>Automated answers and bot support coming soon</p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-4">
            <div class="service-card coming-soon-card">
              <div class="service-card-header bg-info text-dark">
                Quizizz
              </div>
              <div class="service-card-body">
                <p>Automated answers and bot support coming soon</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
